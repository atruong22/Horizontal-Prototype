<Window x:Class="Rating_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="235.735" Width="304.939">

    <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1">
        <StackPanel>
            <Grid Name="gdRating" Margin="10" MouseLeave="gdRating_MouseLeave">
                <WrapPanel Name="pnlMinus">
                </WrapPanel>
                <WrapPanel Name="pnlPlus">
                </WrapPanel>
            </Grid>
            <Separator Margin="0,10,0,10"></Separator>
            <WrapPanel Margin="5,0,5,5">
                <TextBlock Name="lblCaption" FontSize="18" Text="Your Rating - " />
                <TextBlock Name="lblRating" FontSize="18" Text="" />
            </WrapPanel>
            <Button x:Name="submitRating" Content="Submit" Width="68" Click="submitRating_Click"/>

        </StackPanel>
    </Border>

</Window>
