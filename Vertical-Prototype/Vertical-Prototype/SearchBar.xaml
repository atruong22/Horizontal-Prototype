<UserControl x:Class="Vertical_Prototype.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vertical_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="688">
    <Grid Background="#CAF7C9">
        <TextBox x:Name="searchBar_textBox" TextWrapping="Wrap" Height="31" Margin="10,20,263,39"/>
        <Button x:Name="searchBar_searchButton" HorizontalAlignment="Left" Height="31" Margin="425,20,0,0" VerticalAlignment="Top" Width="74">
            <Image x:Name="ChefHat" Source="/images/SearchIcon.png"/>
        </Button>
        <Button x:Name="searchBar_addRecipeButton" Content="Add Recipe" HorizontalAlignment="Left" Height="46" Margin="564,20,0,0" VerticalAlignment="Top" Width="107" Click="searchBar_addRecipeButton_Click"/>
        <ComboBox x:Name="searchBar_filtersCombo" HorizontalAlignment="Left" Height="24" Margin="10,56,0,0" VerticalAlignment="Top" Width="186"/>

    </Grid>
</UserControl>
