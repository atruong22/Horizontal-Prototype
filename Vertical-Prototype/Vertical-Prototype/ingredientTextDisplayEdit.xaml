<UserControl x:Class="Vertical_Prototype.ingredientTextDisplayEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vertical_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="320">
    <Grid Background="#d3f8d3">
        <Label x:Name="IngredientNameLabel" Content="Chicken Breast" HorizontalAlignment="Left" Height="28" VerticalAlignment="Center" Width="163" FontWeight="Normal" FontSize="11" Margin="-3,0,0,0"/>
        <Label x:Name="IngredientNumLabel" Content="250" HorizontalAlignment="Left" Height="28" Margin="160,0,0,0" VerticalAlignment="Center" Width="43" FontWeight="Normal" FontSize="11" FlowDirection="RightToLeft"/>
        <Label x:Name="IngredientMeasureLabel" Content="Cup(s)" HorizontalAlignment="Left" Height="28" Margin="203,0,0,0" VerticalAlignment="Center" Width="47" FontSize="11"/>

        <Button x:Name="_removeIngredientButton" Content="X" Margin="255,2,42,2" FontSize="6" Width="12" Click="_removeIngredientButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Normal"/>

    </Grid>
</UserControl>
