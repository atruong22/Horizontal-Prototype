<UserControl x:Class="Vertical_Prototype.RecipeHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vertical_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="688">
    <Grid Background="#CAF7C9">
        <!-- Will need to pass in the name and have dynamic sizing -->
        <TextBlock x:Name="recipeHeader_title" HorizontalAlignment="Center" Height="70" Text="{Binding RecipeName}" TextWrapping="Wrap" VerticalAlignment="Center" Width="494" TextAlignment="Center" FontWeight="Bold" FontSize="48"/>

    </Grid>
</UserControl>
