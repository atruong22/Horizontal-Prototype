<UserControl x:Class="Vertical_Prototype.ingredientTextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vertical_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="330">
    <Grid Background="#d3f8d3">
        <Label x:Name="IngredientNameLabel" Content="Chicken Breast" HorizontalAlignment="Left" Height="28" VerticalAlignment="Center" Width="158" FontWeight="Normal" FontSize="11" Margin="-3,0,0,0"/>
        <Label x:Name="IngredientNumLabel" Content="250" HorizontalAlignment="Left" Height="28" Margin="181,0,0,0" VerticalAlignment="Center" Width="64" FontWeight="Normal" FontSize="11" FlowDirection="RightToLeft"/>
        <Label x:Name="IngredientMeasureLabel" Content="Cup(s)" HorizontalAlignment="Left" Height="28" Margin="245,0,0,0" VerticalAlignment="Center" Width="75" FontSize="11"/>

    </Grid>
</UserControl>
